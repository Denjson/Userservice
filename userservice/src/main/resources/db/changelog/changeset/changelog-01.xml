<?xml version="1.0" encoding="UTF-8"?>	
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:pro="http://www.liquibase.org/xml/ns/pro"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro
        http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

    <changeSet id="1" author="denrod">
        <sql>
            CREATE SCHEMA IF NOT EXISTS den_schema;
        </sql>
    </changeSet>
    
    <changeSet  id="2"  author="denrod" >
        <createTable  tableName="users" schemaName="den_schema">  
            <column  name="id"  type="bigint"  autoIncrement="true">  
                <constraints  primaryKey="true"  nullable="false"/>
             </column>  
            <column  name="name"  type="varchar(15)"/>  
            <column  name="surname"  type="varchar(20)">  
                <constraints  nullable="false"/>  
            </column>  
            <column  name="birth_date"  type="date"/>
  	    <column  name="email"  type="varchar(25)">
  	    	<constraints  nullable="false"/>  
  	    </column>  
  	    <column  name="active"  type="BOOLEAN"/>
  	    <column  name="role"  type="varchar(20)"/>  
        </createTable> 
    </changeSet>  
    
    <!-- adding unique constraint on column "email" -->
      <changeSet  id="3"  author="denrod" >
    <addUniqueConstraint  
            columnNames="email"
            constraintName="const_unique"
            deferrable="true"
            disabled="true"
            initiallyDeferred="true"
            schemaName="den_schema"
            tableName="users"
            validate="true"/>
  </changeSet>
</databaseChangeLog>